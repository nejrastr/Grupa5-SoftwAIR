@model IEnumerable<SoftwAIR_Alpha.Models.Lokacija>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<style>
    body {
        background-image: url(https://wallpapercave.com/wp/wp6903511.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.grad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aerodrom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.grad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aerodrom)
                </td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                    }




                </td>
            </tr>
        }
    </tbody>
</table>
