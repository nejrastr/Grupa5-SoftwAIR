@model IEnumerable<SoftwAIR_Alpha.Models.Karta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<style>
    body {
        background-image: url(https://wallpapercave.com/wp/wp6903511.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.klasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cijena)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.klasa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cijena)
                </td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ID"> Delete </a>
                    }
                    @if (User.IsInRole("Student"))
                    {
                        <a asp - action="Details" asp-route-id="@item.ID">Kupi</a>
                    }


                </td>
            </tr>
        }
    </tbody>
</table>
